impl 'std.experimental'

# Create a procedure
proc proc_count_down 1 0;
	'proc_count_down' .
    [ !print 1 !sub ]
    pop
end

# Print items in the stack
10 20 30 !print-stack;

# Count down from 5 using a macro
5 !count-down;
# Count down from 5 using a procedure
5 proc_count_down;

'hello world' .

# Simple condition (1 == 1)
1 1 = if
	'In the if condition!' .
	5 !count-down;
end
